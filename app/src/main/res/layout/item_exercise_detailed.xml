<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDetailedExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/imageViewExerciseGif"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewDetailedExerciseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textViewDetailedExerciseSeries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Series: 3"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/textViewDetailedExerciseRepetitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repetitions: 12"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/textViewDetailedExerciseMuscles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Targeted muscles: Biceps"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"/>

</LinearLayout>
