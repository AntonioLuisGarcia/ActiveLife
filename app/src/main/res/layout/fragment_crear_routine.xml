<?xml version="1.0" encoding="utf-8"?>
<!-- layout/fragment_crear_routine.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título de la rutina" />

            <Spinner
                android:id="@+id/daySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <!-- Contenedor para los fragmentos de ejercicio -->
            <LinearLayout
                android:id="@+id/exercise_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/addExerciseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir ejercicio"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/button_add_predefined_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir Ejercicio Predefinido"
                />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonSendRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />


</FrameLayout>
