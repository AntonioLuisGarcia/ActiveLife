<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título de la rutina" />

    <!-- Agrega el fragmento ExerciseFragment -->
    <fragment
        android:id="@+id/exercise_fragment"
        android:name="edu.tfc.activelife.ExerciseFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/addExerciseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir ejercicio"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp" />

    <!-- Agrega un botón para enviar la rutina -->
    <Button
        android:id="@+id/buttonSendRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
